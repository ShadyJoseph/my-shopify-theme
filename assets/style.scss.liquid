/* Product Styles */
.product-card {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
    margin: 20px;
    text-align: center;
    flex: 1 1 calc(25% - 40px);
    max-width: calc(25% - 40px);
  
    @media (max-width: 768px) {
      flex: 1 1 calc(50% - 40px);
      max-width: calc(50% - 40px);
    }
  
    @media (max-width: 480px) {
      flex: 1 1 100%;
      max-width: 100%;
    }
  
    &:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }
  }
  
  .product-image {
    max-width: 100%;
    height: auto;
    border-bottom: 1px solid #eee;
    transition: transform 0.3s;
  }
  
  .product-image:hover {
    transform: scale(1.05);
  }
  
  .product-title {
    font-size: 20px;
    font-weight: bold;
    color: #333;
    margin: 20px 0 10px;
    transition: color 0.3s;
  }
  
  .product-description {
    font-size: 16px;
    color: #555;
    padding: 0 20px;
    margin-bottom: 15px;
  }
  
  .product-price {
    color: $highlightColor;
    font-weight: bold;
    font-size: 22px;
    margin-bottom: 15px;
  }
  
  .button-group {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
  }
  
  .product-btn,
  .add-to-cart,
  .continue-shopping-btn {
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s;
    text-decoration: none;
    color: #fff;
  }
  
  .product-btn {
    background-color: #007bff;
  
    &:hover {
      background-color: #0056b3;
    }
  }
  
  .add-to-cart {
    background-color: #28a745;
  
    &:hover {
      background-color: #218838;
    }
  }
  
  .continue-shopping-btn {
    background-color: #6c757d;
  
    &:hover {
      background-color: #5a6268;
    }
  }
  
  /* Pagination styles */
  .pagination {
    margin-top: 20px;
    text-align: center;
  }
  
  .pagination a,
  .pagination .current,
  .pagination .prev,
  .pagination .next {
    display: inline-block;
    padding: 8px 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-right: 5px;
    color: #333;
    transition: background-color 0.3s;
    text-decoration: none;
  }
  
  .pagination .current {
    font-weight: bold;
    color: $highlightColor;
  }
  
  .pagination a:hover,
  .pagination .prev:hover,
  .pagination .next:hover {
    background-color: #f0f0f0;
  }
  
  /* Boolean Filter Form */
  .boolean-filter-form {
    margin-top: 20px;
  }
  
  .filter-summary {
    cursor: pointer;
    display: block;
    padding: 10px;
    background-color: #f0f0f0;
    border-radius: 5px;
    margin-bottom: 10px;
  }
  
  .filter-summary-content {
    display: flex;
    align-items: center;
  }
  
  .filter-options {
    display: none;
  }
  
  .filter-options.active {
    display: block;
  }
  
  .filter-values {
    list-style: none;
    padding: 0;
    margin: 10px 0 0;
  }
  
  .filter-values li {
    margin-bottom: 10px;
  }
  
  .filter-values label {
    cursor: pointer;
    display: flex;
    align-items: center;
  }
  
  .filter-values input {
    margin-right: 10px;
  }
  
  /* Footer styles */
  .footer {
    background-color: #f8f9fa;
    padding: 20px 0;
    color: #343a40;
  }
  
  .footer .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .footer-top {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 100%;
    max-width: 1200px;
    margin-bottom: 20px;
  }
  
  .footer-top > div {
    flex: 1;
    text-align: center;
    margin-bottom: 20px;
  }
  
  .footer h3 {
    margin-bottom: 20px;
    font-size: 1.2rem;
    font-weight: bold;
  }
  
  .footer ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer ul li {
    margin-bottom: 10px;
  }
  
  .footer ul li a {
    color: #343a40;
    text-decoration: none;
    transition: color 0.3s;
  }
  
  .footer ul li a:hover {
    color: $highlightColor;
  }
  
  .footer-bottom {
    width: 100%;
    text-align: center;
    font-size: 0.9rem;
    border-top: 1px solid #dee2e6;
    padding-top: 20px;
  }
  
  .footer-socials {
    display: flex;
    justify-content: center;
    margin-top: 20px;
  }
  
  .footer-socials a {
    margin: 0 10px;
    color: #343a40;
    font-size: 1.2rem;
    transition: color 0.3s;
  }
  
  .footer-socials a:hover {
    color: $highlightColor;
  }
  
  footer .footer-bottom {
    font-size: 14px;
    color: #777;
  }
  
  /* Responsive styles */
  @media (max-width: 768px) {
    .container {
      width: 100%;
      padding: 10px;
    }
    .cart__container,
    .search-results {
      padding: 10px;
    }
  
    form {
      flex-direction: column;
      gap: 10px;
      margin-right: 0;
    }
  
    input[type="search"] {
      width: 100%;
    }
  
    .cart__items,
    .cart__item {
      flex-direction: column;
      align-items: flex-start;
    }
  
    .cart__item-image,
    .item-image {
      width: 100%;
    }
  
    .cart__item-details,
    .item-details {
      width: 100%;
    }
  
    .cart__summary,
    .cart__continue-shopping {
      text-align: center;
    }
  
    .footer-top {
      flex-direction: column;
      align-items: center;
    }
  
    .footer-top > div {
      margin-bottom: 20px;
    }
  }
  
  @media (max-width: 480px) {
    input[type="search"] {
      margin-right: 0;
      margin-bottom: 10px;
    }
  
    .product-image {
      margin-bottom: 10px;
    }
  }
      